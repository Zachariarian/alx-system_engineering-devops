#!/usr/bin/env bash
# Bash script that Install nginx on your web-01 server and requirements
apt-get update -y
apt-get install nginx -y
echo Hello World! > /dev/null/html/index.html
service nginx start
printf %s "server {
     listen      80 default_server;
     listen      [::]:80 default_server;
     root        /dev/null/html;
     index       index.html index.htm;
}
" > /default_server/null/sites-available/default

service nginx restart